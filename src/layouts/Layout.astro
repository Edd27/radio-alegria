---
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import { config } from "../config";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content=`Reproductor en vivo ${config.radio.title}` />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-neutral-800 dark:text-white bg-white text-neutral-700 transition-colors">
		<Navbar />
		<main class="flex flex-col min-h-screen items-center justify-between md:justify-center px-3 md:px-16 lg:px-32 pt-20 pb-2">
			<slot />
		</main>
		<Footer />
	</body>
</html>
