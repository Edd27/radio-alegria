---
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Reproductor en vivo Radio Alegria" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-neutral-800 dark:text-white bg-white text-neutral-700">
		<Navbar />
		<main class="flex flex-col min-h-screen items-center justify-center px-3 md:px-16 lg:px-32 py-2">
			<slot />
		</main>
		<Footer />
	</body>
</html>
